<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_normal">

    <TextView
        android:id="@+id/poi_item_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/purple_500"
        tools:text="Go to Point Bonita in the summer"
        android:layout_marginBottom="@dimen/spacing_normal"/>

    <TextView
        android:id="@+id/poi_item_date_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@color/teal_700"
        tools:text="2018-11-22"
        android:layout_marginBottom="@dimen/spacing_small"/>

    <TextView
        android:id="@+id/poi_item_comment_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textColor="@color/teal_700"
        android:layout_marginBottom="@dimen/spacing_small"
        tools:text="Truly a majestic place. Everyone should have the change to see this beautiful place at least once in their lifetime."/>

    <RatingBar
        android:id="@+id/poi_rating_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="0.1"
        android:isIndicator="true"
        android:progressTint="@color/teal_200"
        android:progressBackgroundTint="@color/black"
        android:secondaryProgressTint="@color/black"
        android:numStars="5" />
</LinearLayout>